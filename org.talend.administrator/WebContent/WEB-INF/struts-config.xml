 <!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
  "./resources/struts-config_1_2.dtd">

<!-- Struts configuration file for Winthor application.
	@version $Revision$ $Date$ -->

<struts-config>
	<display-name>org.talend.administrator</display-name>
	<form-beans>
		<form-bean name="LoginForm" type="org.talend.administrator.controller.login.form.LoginForm" />
		<form-bean name="UserForm" type="org.talend.administrator.controller.user.form.UserForm" />
	</form-beans>
	<action-mappings>		
		<!-- Generic load-list-add-update-save Action -->
		<action path="/*/action*"
			type="org.talend.administrator.controller.{1}.action.{2}Action" name="{2}Form"
			parameter="method" scope="request" validate="false">
			<forward name="list" path="talend.{1}.list{2}" />
			<forward name="form" path="talend.{1}.edit{2}" />
			<forward name="confDelete" path="talend.common.deleteElement" />
			<forward name="errorList" path="talend.{1}.list{2}" redirect="true"/>
			<forward name="errorForm" path="talend.{1}.edit{2}" redirect="true"/>
			<forward name="error" path="/login/actionLogin.do?method=load" />
			<forward name="crashSession" path="/login/actionLogin.do?method=load" />
		</action>
	</action-mappings>
	
	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor" bufferSize="4096" />
	
	<message-resources null="false" parameter="TalendResources" />
	
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
		<set-property property="definitions-parser-validate" value="false" />
	</plug-in>
	
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml, /WEB-INF/validation.xml" />
	</plug-in>
</struts-config>